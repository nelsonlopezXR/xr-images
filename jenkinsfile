pipeline {
    parameters {
        string(
            name: 'GIT_SHA',
            description: 'GIT SHA to Deploy',
            trim: true
        )
    }

    agent any

    environment {
        SHA = "${params.GIT_SHA}"
    }

    stages {
        stage('validate') {
            steps {
                script {
                    sh "echo '|'${SHA}'|'"
                }
            }
        }
    }
}